- if commentable.is_a? Comment
  = render 'comments/form', :commentable=>commentable if current_user
  %ul.comments.subcomments{:id=>"comments_of-"+commentable_id(commentable)}
    = render commentable.comments
- else
  #comments
    %ul.comments{:id=>"comments_of-"+commentable_id(commentable)}
      %h2.comments-header
        Комментарии (<span id='comments-total-counter'>#{commentable.all_comments_count}</span>)
      = render commentable.comments
    = render 'comments/form', :commentable=>commentable if current_user
