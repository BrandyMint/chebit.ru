%h2 Регистрация

= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = f.error_messages
  = f.inputs do
    = f.input :email
    = f.input :password
    = f.input :password_confirmation
  = f.buttons do
    = f.commit_button "Зарегистрироваться"

= render :partial => "devise/shared/links"
