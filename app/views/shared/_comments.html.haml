.comments
  -if ! item.instance_of?(Comment)#Если не комментарий
    %h2.comments-header
      комментарии (
      %span.js-comments-count 
      = item.comments.count 
      )
  - if item.comments.empty?
    -if ! item.instance_of?(Comment)#Если не комментарий
      Нет комментариев для показа.
  - else
    %ul.all_comments
      - for comment in item.comments
        %li.comment_holder.vote_holder{:onmouseover => "showdiv(this,'folding-dot-holder')", :onmouseout => "hidediv(this,'folding-dot-holder')"}
          .msg-meta
            .folding-dot-holder
              .folding-dot
            %ul.comment_user
              %li
                %div
                  - if @discourse.assigner
                    = link_to comment.author,comment.author
              %li.date
                %div
                  = comment.created_at(:forum_long_ago)
          .comment_content
            = comment.content
          .comment_menu
            - if can? :destroy, comment
              = link_to 'Удалить', comment, :confirm => 'Вы уверены?', :method => :delete
          .comment_new
            %h5
              = link_to 'Ответить','#', :class => 'linkaddcomment'
              = render :partial => "shared/form_newcomment", :locals => {:item => comment}
          = render :partial => "shared/form_newcomment", :locals => {:item => comment}
          = render :partial => "shared/comments", :locals => {:item => comment}
  -if ! item.instance_of?(Comment)#Если не комментарий
    .comment_new
      %h3
        = link_to 'Добавить комментарий','#', :class => 'linkaddcomment' 
        = render :partial => "shared/form_newcomment", :locals => {:item => comment}
