.vacancies
  - if @vacancy.nil?
    Ошибка! Нет такой вакансии.
  - else
    .vname 
      %b 
        = @vacancy.title
    .vtext  
      = wrap(simple_format(@vacancy.text))
      
    - if (current_user == @vacancy.user)
      = link_to "Редактировать", edit_vacancy_path
      = link_to "Удалить", @vacancy, :method => :delete, :confirm => "Уверены?", :title => @vacancy.title
  
  .backlink
    = link_to 'Назад', vacancies_path